<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/cv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:id="@+id/photo_item"
                android:padding="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_item"
                android:layout_toRightOf="@+id/photo_item"
                android:layout_alignParentTop="true"

                android:textSize="30sp"
                />
            <TextView
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_age"
                android:layout_toRightOf="@+id/photo_item"
                android:layout_below="@+id/name_item"
                android:text="Edad: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/age_item"
                android:layout_toRightOf="@+id/lbl_age"
                android:layout_below="@+id/name_item" />
            <TextView
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_carnet"
                android:layout_toRightOf="@+id/photo_item"
                android:layout_below="@+id/lbl_age"
                android:text="Carnet: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carnet_item"
                android:layout_toRightOf="@+id/lbl_carnet"
                android:layout_below="@+id/age_item" />
            <TextView
                android:layout_width="30pt"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_career"
                android:layout_toRightOf="@+id/photo_item"
                android:layout_below="@+id/lbl_carnet"
                android:text="Carrera: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/career_item"
                android:layout_toRightOf="@+id/lbl_career"
                android:layout_below="@+id/carnet_item"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnEdit_item"
                android:layout_toRightOf="@+id/photo_item"
                android:layout_below="@+id/lbl_career"
                android:text="@string/editar"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDelete_item"
                android:layout_toRightOf="@+id/btnEdit_item"
                android:layout_below="@+id/career_item"
                android:text="@string/eliminar"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>